pipeline {
    agent any

    tools {
        jdk 'jdk17'
        nodejs 'node23'
    }

    environment {
        // Set these according to your Jenkins configuration
        SONARQUBE_ENV = 'SonarQubeServer'   // Name of your SonarQube server in Jenkins
        SCANNER_HOME = tool name: 'sonar-scanner', type: 'hudson.plugins.sonar.SonarRunnerInstallation'
        CONTAINER_NAME = 'bms'
        APP_PORT = '3000'
        IMAGE_NAME = 'ASKFORTESAWS/bms'
    }

    stages {

        stage('Clean Workspace') {
            steps {
                cleanWs()
            }
        }

        stage('Checkout from Git') {
            steps {
                checkout([
                    $class: 'GitSCM',
                    branches: [[name: '*/main']],
                    userRemoteConfigs: [[url: 'https://github.com/prakash-128/Book-My-Show.git']]
                ])
                sh 'ls -la'
            }
        }

        stage('SonarQube Analysis') {
            steps {
                script {
                    if (fileExists('bookmyshow-app')) {
                        withSonarQubeEnv("${SONARQUBE_ENV}") {
                            sh '''
                                echo "Running SonarQube analysis..."
                                $SCANNER_HOME/bin/sonar-scanner \
                                  -Dsonar.projectKey=BMS \
                                  -Dsonar.projectName=BMS \
                                  -Dsonar.sources=bookmyshow-app
                            '''
                        }
                    } else {
                        echo "Skipping SonarQube â€” source folder not found"
                    }
                }
            }
        }

        stage('Install Dependencies') {
            steps {
                sh '''
                    cd bookmyshow-app
                    if [ -f package.json ]; then
                        echo "Installing Node.js dependencies..."
                        rm -rf node_modules package-lock.json
                        npm install
                    else
                        echo "Error: package.json not found!"
                        exit 1
                    fi
                '''
            }
        }

        stage('Trivy FS Scan') {
            steps {
                sh '''
                    echo "Running Trivy filesystem scan..."
                    trivy fs . > trivyfs.txt || true
                '''
            }
        }

        stage('Docker Build & Push') {
            steps {
                script {
                    def imageTag = "${IMAGE_NAME}:${BUILD_NUMBER}"
                    withDockerRegistry(credentialsId: 'docker-cred', toolName: 'docker') {
                        sh """
                            echo "Building Docker image..."
                            docker build --no-cache -t ${IMAGE_NAME}:latest -f bookmyshow-app/Dockerfile bookmyshow-app
                            docker tag ${IMAGE_NAME}:latest ${imageTag}
                            docker push ${IMAGE_NAME}:latest
                            docker push ${imageTag}
                        """
                    }
                }
            }
        }

        stage('Trivy Image Scan') {
            steps {
                sh '''
                    echo "Running Trivy image scan..."
                    trivy image ${IMAGE_NAME}:latest > trivyimage.txt || true
                '''
            }
        }

        stage('Deploy to Container') {
            steps {
                sh '''
                    echo "Stopping old container if exists..."
                    docker stop ${CONTAINER_NAME} || true
                    docker rm ${CONTAINER_NAME} || true

                    echo "Starting new container..."
                    docker run -d --restart=always --name ${CONTAINER_NAME} -p ${APP_PORT}:3000 ${IMAGE_NAME}:latest

                    echo "Checking running containers..."
                    docker ps -a
                    sleep 5
                    docker logs ${CONTAINER_NAME}
                '''
            }
        }
    }

    post {
        always {
            emailext(
                attachLog: true,
                subject: "Build #${BUILD_NUMBER}: ${currentBuild.result}",
                body: """
                    <h3>Build Summary</h3>
                    <p><b>Project:</b> ${env.JOB_NAME}</p>
                    <p><b>Build Number:</b> ${env.BUILD_NUMBER}</p>
                    <p><b>Status:</b> ${currentBuild.result}</p>
                    <p><b>URL:</b> <a href="${env.BUILD_URL}">${env.BUILD_URL}</a></p>
                """,
                to: 'askfortesaws6@gmail.com',
                attachmentsPattern: 'trivyfs.txt,trivyimage.txt'
            )
        }
    }
}
